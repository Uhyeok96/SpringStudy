<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper 
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- xml를 활용한 공통코드 -->

<!-- mapper 인터페이스의 sql 처리용 코드 -->
<mapper namespace="org.zerock.mapper.BoardMapper"> <!-- 패키지.인터페이스명 -->

<select id="getList" resultType="org.zerock.domain.BoardVO"> <!-- id:메서드명, resultType:객체 -->
	<![CDATA[
		select * from tbl_board where bno > 0
	]]> <!-- CDATA 사용 이유는 부등호인지 문자인지를 판단하지 말것 (문자처리) -->
</select>

<sql id="criteria"> <!-- sql문을 보관하고 <include>태그 id (sql id="criteria")로 호출하여 사용 (43행) -->
	<trim prefix="(" suffix=") AND " prefixOverrides="OR">
		<foreach item='type' collection="typeArr">
			<trim prefix="OR">
				<choose>
					<when test="type == 'T'.toString()">
						title like '%'||#{keyword}||'%'
					</when>
					<when test="type == 'C'.toString()">
						content like '%'||#{keyword}||'%'
					</when>
					<when test="type == 'W'.toString()">
						writer like '%'||#{keyword}||'%'
					</when>
				</choose>
			</trim>
		</foreach>
	</trim>
</sql>

<select id="getListWithPaging" resultType="org.zerock.domain.BoardVO">
	<![CDATA[
	select bno, title, content, writer, regdate, updatedate
	from 
	(select /*+index_desc(tbl_board pk_board) */ rownum rn, bno, title, content, writer, regdate, updatedate from tbl_board where 
	]]>
	
	<include refid="criteria"></include> <!-- 상단에 보관해놓은 sql문을 불러와 사용 <sql id="criteria"> -->
	
	<![CDATA[
	rownum <= #{pageNum} * #{amount})
	where rn > (#{pageNum} -1) * #{amount}
	]]> <!-- pageNum와 amount를 이용하여 게시물을 1페이지당 10개씩 리스트로 출력 -->
</select>

<insert id="insert">
	<![CDATA[
		insert into tbl_board (bno, title, content, writer)
		values (seq_board.nextval, #{title}, #{content}, #{writer})
	]]> 
</insert>

<insert id="insertSelectKey">
	
	<selectKey keyProperty="bno" order="BEFORE" resultType="long">
		select seq_board.nextval from dual
	</selectKey> <!-- insert 전에 번호를 미리 만들어 놈 -->
	
	<![CDATA[
		insert into tbl_board (bno, title, content, writer)
		values (#{bno}, #{title}, #{content}, #{writer})
	]]> 
</insert>

<select id="read" resultType="org.zerock.domain.BoardVO">
	<![CDATA[
		select * from tbl_board where bno = #{bno}
	]]> <!-- bno와 같은 테이블에 모든 정보를 가져와 객체화 시켜라 -->
</select>

<update id="update">
	<![CDATA[
		update tbl_board set 
		title = #{ title }, content = #{ content }, writer = #{ writer }, updateDate = sysdate
		where bno = #{bno}
	]]> <!-- 번호를 가지고 해당하는 객체를 수정한다. -->
</update>

<delete id="delete">
	<![CDATA[
		delete from tbl_board where bno = #{ bno }
	]]> <!-- 번호를 조건으로 레코드를 삭제한다. -->
</delete>

<select id="getTotalCount" resultType="int">
	<![CDATA[
		select count(*) from tbl_board where bno > 0
	]]> <!-- 게시물의 총 개수를 구한다. -->
</select>

</mapper>